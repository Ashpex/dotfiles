#
#
# General Settings
#
set selection-clipboard clipboard
set recolor true
set adjust-open width
set n-completion-items 5
set statusbar-v-padding 30
set statusbar-h-padding 30
set font "Fira Code Nerd Font normal 10"
set page-padding 5
set statusbar-basename true
set statusbar-home-tilde true
#set guioptions none


#
# Shortcuts
#
#
map <C-i> recolor


#
# Color theme
#

set notification-error-bg       "#f07178" # Red
set notification-error-fg       "#f8f8f2" # Foreground
set notification-warning-bg     "#ffb86c" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#111111" # Background
set notification-fg             "#f8f8f2" # Foreground

set completion-bg               "#111111" # Background
set completion-fg               "#B68C2F" # Comment
set completion-group-bg         "#111111" # Background
set completion-group-fg         "#B68C2F" # Comment
set completion-highlight-bg     "#2f2f2f" # Selection
set completion-highlight-fg     "#f8f8f2" # Foreground

set index-bg                    "#111111" # Background
set index-fg                    "#f8f8f2" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#f8f8f2" # Foreground

set inputbar-bg                 "#111111" # Background
set inputbar-fg                 "#5c6773" # Foreground
set statusbar-bg                "#111111" # Background
set statusbar-fg                "#f8f8f2" # Foreground

set highlight-color             "#ffae57" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#111111" # Background
set default-fg                  "#f8f8f2" # Foreground

set render-loading              true
set render-loading-fg           "#111111" # Background
set render-loading-bg           "#f8f8f2" # Foreground


#
# Recolor mode settings
#

set recolor-lightcolor          "#111111" # Background
set recolor-darkcolor           "#f8f8f2" # Foreground
